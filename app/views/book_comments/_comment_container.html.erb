<div class="comments-box">
  <% book.book_comments.each do |book_comment| %>
    <div class="comment">
      <%= link_to user_path(book_comment.user) do %>
        <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 30, 30, fallback: "no-image-icon.jpg") %><br>
        <%= book_comment.user.name %>
      <% end %>
      <span><%= book_comment.comment %></span>
      <% if book_comment.user == current_user %>
        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="new-comment">
  <%= render 'layouts/errors', obj: @comment %>
  <%= form_with(model:[book, comment], local: true) do |f| %>
    <%= f.text_area :comment, rows: '5', class: "form-control my-2" %>
    <%= f.submit "送信" %>
  <% end %>
</div>