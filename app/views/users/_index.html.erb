<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td><%= user.name %></td>
        <td>
          フォロー数:
          <span class="following-count-<%= user.id %>"><%= render 'users/following_count', user: user %></span>
        </td>
        <td>
          フォロワー数:
          <span class="followers-count-<%= user.id %>"><%= render 'users/followers_count', user: user %></span>
        </td>
        <td class="follow-button-<%= user.id %>">
        <% if current_user != user %>
          <%= render 'users/follow_button', user: user %>
        <% end %>
        </td>
        <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
