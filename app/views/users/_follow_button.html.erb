<% if current_user.following?(user) %>
  <%= link_to "フォロー外す", user_relationships_path(user), method: :delete, remote: true, class: "btn btn-block btn-secondary" %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user), method: :post, remote: true, class: "btn btn-block btn-primary" %>
<% end %>