$('.follow-button-<%= @user.id %>').html("<%= j(render 'users/follow_button', user: @user) %>");
$('.following-count-<%= @user.id %>').html('<%= @user.following.count %>');
$('.followers-count-<%= @user.id %>').html('<%= @user.followers.count %>');
$('.following-count-<%= current_user.id %>').html('<%= current_user.following.count %>');

$('#followers-link-<%= @user.id %>').html('<%= link_to @user.followers.count, followers_user_path(@user) %>');
$('#following-link-<%= current_user.id %>').html('<%= link_to current_user.following.count, following_user_path(current_user) %>');